<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Index máquinas</title>
    <link rel="stylesheet"  href="view.scss" >
</head>
<div class="topnav">
    <a class="active" href="#home">Home</a>
    <a href="#">Mi perfil</a>
    <a href="#">Máquinas</a>
    <a href="#">Clases</a>
    <a href="#">Reservas</a>
    <a href="#">Horas</a>
</div>
<body>
    <h1> Usuarios </h1>
    <div class="ref-to-new">
        <a href="<%= newUserPath %>">Agregar nuevo usuario</a>
        <p> Cantidad de Usuarios: <%= users.length %> </p>
    </div>
    <div class="items">
        <% users.forEach(user => { %>
            <div class="elemento">
                <h2><%=user.id %> <%= user.name %> <%= user.lastname %></h2>
                <a href="<%= userPath(user.id) %>">Ver más</a>
                <a href="<%- editUserPath(user.id) %>">Editar</a>
                <form action="<%= deleteUserPath(user.id) %>" method="POST">
                    <input type="hidden" name="_method" value="delete" />
                    <input type="submit" value="Delete" />
                </form>
            </div>

        <% }); %>
    </div>
</body>
</html>
