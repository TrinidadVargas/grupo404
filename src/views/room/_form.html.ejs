<body> 
	<section class="cuerpo">
    <form method="post" action="<%= createRoomPath %>">
        <% if (locals.errors) { %>
            <div class="errors">
                <p>La sala no se pudo crear por los siguientes errores:</p>
                <ul>
                    <% errors.forEach(error => { %>
                        <li> <%= error.path %>: <%= error.message %></li>
                    <% }); %> 
                </ul>
            </div> 
        <% } %>
        <h1>Nueva sala</h1>
        <div class="wrapper">
            <div class="this-form">
            <div class="field">
                <label for="type">Nombre</label>
                <input type="text" name="type" value="<%= sala.name %>" />
            </div>
            <div class="field">
                <label for="capacity">Capacidad</label>
                <input type="text" name="capacity" value="<%= sala.capacity %>" />
            </div>
            <div class="actions">
                <input type="submit" value="Crear" />
            </div>
            </div>
        </div>
    </form>
		</section>
	</body>
