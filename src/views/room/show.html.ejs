<body>
  <section class="cuerpo">
		<div class="elemento">
			<h1><%= sala.type%></h1>
			<img class="medium" src="<%= cloudinary.url(sala.image) %>" />
			<div class="cont">
				<h2>Capacidad para <%= sala.capacity %> personas</h2>
			</div>
		</div>

		<div class=elemento">
			<h2><%= events.length %> clases disponibles</h2>
			<% if (events.length) { %>
				<ul>
					<% events.forEach((event) => { %>
						<div class="elemento">
						<h4> <%= event.name %></h4>
						<img class="medium" src="<%= cloudinary.url(event.image) %>" />
						<div class="cont">
							<p> <%= event.description %></p>
							<p> DÃ­as: <%= event.days %></p>
							<p> De <%= event.startsAt %> a <%= event.endsAt %> hrs</p>
						</div>
						</div>
							<% }); %>
				</ul>
			<% } %>
		</div>
  </section>
</body>


