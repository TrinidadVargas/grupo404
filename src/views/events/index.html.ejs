                <p><%= event.description %></p>
                <p><%= event.days %></p>
                <p><%= event.startsAt %></p>
                //<a href="<%=eventPath(event.id)%>">Ver</a>
                <a href = "<%= eventPath(event.id) %>">Ver m√°s</a>
                <a href="<%= editEventPath(event.id) %>">Editar</a>
            </div>
        <% })%>
    </div>
    </section>
</body>
