<body>
    <form method="post" action="<%= submitPath %>" enctype="multipart/form-data">
        <% if (locals.errors){ %>
            <div class="errors">
            <p>La maquina no se pudo crear debido a los siguientes errores:</p>
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.path %>: <%= error.message %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <% if (!machine.isNewRecord){ %>
        <input type="hidden" name="_method" value="patch" />
    <%}%>
    
    <div class="wrapper">
        <div class="this-form">
            <div class="field">
                <label for="name">Nombre</label>
                <input type="text" id="name" name="name" value="<%= machine.name%>"/>
            </div>
            <div class="field">
                <label for="description">Descripci√≥n</label>
                <textarea name="description" id="description" rows="4", cols="30"><%= machine.description%></textarea>
            </div>
            <div class="field">
                <label for="image">Imagen</label>
                <input type="file" name="image" id="image"/>
            </div>
            <div class="actions">
                <input type="submit" value="<%= machine.isNewRecord ? 'Crear' : 'Modificar' %>" />
            </div>
        </div>
    </div>
    </form>
</body>
