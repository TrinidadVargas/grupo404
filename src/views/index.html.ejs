          <a href ="#">Ver Más</a>
        </section>
      </article>
      <article class="secondary-article">
        <section>
          <h3>Salas</h3>
          <a href ="<%= roomsPath %>">Ver Más</a>
        </section>
      </article>
      <article class="secondary-article">
        <section>
          <h3>Entrenadores</h3>
          <a href ="#">Ver Más</a>
        </section>
      </article>
      <article class="secondary-article">
        <section>
          <h3>Usuarios</h3>
          <a href ="<%= usersPath %>">Ver Más</a>
        </section>
      </article>
    </section>

  </main>
</body>
</html>