<body>
<% if (locals.currentUser && locals.currentUser.user_type==0) { %>
  <section class="cuerpo">
    <div class="title">
      <h3> Hola <%= user.name%></h3>
    </div>
    <div class="first-row">
      <img id="profilepic" src="<%= cloudinary.url(user.image) %>" />
      <div class="first-text-container">
          <div>Nombre: <%= user.name%> <%= user.lastname%></div>
          <div>Email: <%= user.email %></div>
          <div>Rut:  <%= user.rut %> </div>
      </div>
    </div>
    <ul class="photos">
      <li class="photo">
        <h3>Chatear</h3>
        <a href ="<%= newConversationPath%>">
          <img class="medium" src="https://res.cloudinary.com/divxz0cz4/image/upload/v1605479610/dashboard/dashboard_cel_pij1tk-c_limit_h_350_w_350_yyldzd.jpg" />	
        </a>
      </li>      
      <li class="photo">
        <h3>Estadísticas</h3>
        <a href ="<%= chartsPath %>">
          <img class="medium" src="https://res.cloudinary.com/divxz0cz4/image/upload/c_scale,h_279,w_350/v1606780867/dashboard/estadisticas_javyvq.png"/>
        </a>
      </li>   
      <li class="photo">
        <h3>Personal</h3>
        <a href ="<%= personalusersPath %>">
          <img class="medium" src="https://res.cloudinary.com/divxz0cz4/image/upload/c_scale,h_279,w_350/v1605479748/dashboard/dashboard_dashboard_team_ytnlwe-c_scale_h_350_w_350_yiptcy-c_scale_h_350_w_350_xhvkiq.jpg"/>
        </a>
      </li>   
      <li class="photo">
        <h3>Fichas</h3>
        <a href ="<%= healthprofilePath %>">
          <img class="medium" src="https://res.cloudinary.com/divxz0cz4/image/upload/c_scale,h_279,w_350/v1606743703/ficha_pspynf.jpg" />
        </a>
      </li>
      <li class="photo">
        <h3>Membresías</h3>
        <a href ="<%= membershipsPath %>">
          <img class="medium" src="https://res.cloudinary.com/divxz0cz4/image/upload/c_scale,h_276,w_350/v1605479393/dashboard/dashboard_Mesa-de-trabajo-3-1_kcgbkn-c_limit_h_350_w_350_bv2ivn.jpg"/>
        </a>
      </li>   
      <li class="photo">
        <h3>Citas</h3>
        <a href ="<%= appointmentsPath %>">
          <img class="medium" src="https://res.cloudinary.com/divxz0cz4/image/upload/c_scale,h_279,w_350/v1605478314/dashboard/dashboard_salas_dgy9sl-c_scale_h_350_w_350_ntbgw9.jpg"/>
        </a>
      </li>      
    </ul> 

  <% } %>
</section>
