<body>
  <section class="cuerpo">
    <form method="post" action="<%= submitUserPath%>">
      <% if (locals.errors) {%>
        <div class="errors">
          <p>El usuario no se puede crear debido a los siguientes errores: </p>
          <ul>
            <% errors.forEach(error => {%>
              <li><%= error.path %>: <%= error.message %></li>
            <% });%>
          </ul>
        </div>
      <%} %>

      <% if (!user.isNewRecord) { %>
        <input type="hidden" name="_method" value="patch" />
      <% } %>

      <h1>Crear cuenta</h1>
      <div class="wrapper">
          <div class="this-form">
              <div class="field">
                <label for="name">Nombre</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" />
              </div>
              <div class="field">
                <label for="lastname">Apellido</label>
                <input type="text" id="lastname" name="lastname" value="<%= user.lastname %>" />
              </div>
              <div class="field">
                <label for="email">Email</label>
                <input type="text" id="email" name="email" value="<%= user.email %>" />
              </div>

              <div class="field">
                <label for="password">Contrase√±a</label>
                <input type="password" id="password" name="password" value="<%= user.password %>" />
              </div>
              <div class="field">
                <label for="rut">Rut</label>
                <input type="text" id="rut" name="rut" value="<%= user.rut %>" />
              </div>

              <% if (locals.currentUser && locals.currentUser.user_type==0) { %>
                <div>
                  <label for="user_type">Tipo de Cuenta</label>
                  <select name="user_type" id="user_type">
                    <option value=0> Administrador</option>
                    <option value=1> Cliente</option>
                    <option value=2> Entrenador</option>
                    <option value=3> Nutricionista</option>
                  </select>
                </div>
              <% } else { %>
                <input type="hidden" id="user_type" name="user_type" value="1" />
              <% } %>

              
              <div class="actions">
                <% if (user.isNewRecord) { %>
                  <input type="submit" name="create" value="Create" />
                <% } else { %>
                  <input type="submit" name="update" value="Update" />
                <% } %>
            </div>

            </form>
          </div>
        </div>
    </section>
  </body>