<body>
	<section class="cuerpo">
    <form method ="post" action="<%= createProfilePath %>">
        <% if (locals.errors){ %>
            <div class="errors">
            <p>La ficha no se pudo crear debido a los siguientes errores:</p>
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.path %>: <%= error.message %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>
    <h1>Nuevo perfil</h1>
    <div class="wrapper">
        <div class="this-form">

            <div class="field">
                <label for="birth">Fecha de nacimiento</label>
                <input type="date" id="birth" name="birth" value="<%= health_profile.birth%>">
                <span class="error"></span>
            </div>
            <div class="field">
                <label for="gender">Genero</label>
                <select name="gender" id="gender">
                <option value=0> Mujer</option>
                <option value=1> Hombre</option>
                </select>
            </div>
            <div class="field">
                <label for="height">Altura</label>
                <input type="number" id="height" name="height" value="<%= health_profile.height%>">
            </div>
            <div class="field">
                <label for="weight">Peso</label>
                <input type="number" id="weight" name="weight" value="<%= health_profile.weight%>">
            </div>
            <div class="field">
                <label for="fat_percentage">Porcentaje de grasa</label>
                <input type="number" id="fat_percentage" name="fat_percentage" value="<%= health_profile.fat_percentage%>">
            </div>
            <div class="field">
                <label for="emergency_number">Numero de emergencia</label>
                <input type="text" id="emergency_number" name="emergency_number" value="<%= health_profile.emergency_number%>">
            </div>

            <div class="field">
                <label for="description">Comentarios</label>
                <textarea name="description" id="description" rows="4" cols="30"><%= health_profile.description %></textarea>
            </div>
            <div class="actions">
                <input class="formlink" type="submit" value="Crear">
            </div>
        </div>
    </div>
		</form>
	</section>
</body>
