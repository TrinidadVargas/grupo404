<form method="post" action="<%= submitAppointmentPath%>">
  <% if (locals.errors) {%>
    <div class="errors">
      <p>La consulta no se puede crear debido a los siguientes errores: </p>
      <ul>
        <% errors.forEach(error => {%>
          <li><%= error.path %>: <%= error.message %></li>
        <% });%>
      </ul>
    </div>
    
  <%} %>

  <% if (!appointment.isNewRecord) { %>
    <input type="hidden" name="_method" value="patch" />
  <% } %>
  
  Solo si es especialista
  <div class="field">
    <label for="specialistId">SpecialistId</label>
    <input type="number" id="specialistId" name="specialistId" value="<%=appointment.specialistId%>"/>
  </div>

  <div class="field">
    <label for="date">Fecha</label>
    <input type="datetime-local" id="date" name="date" value=<%=appointment.date%>>
  </div>

  Usuario (solo si es usuario)
  <div class="field">
    <label for="userId">userId</label>
    <input type="number" id="userId" name="userId" />
  </div>


  <div class="field">
    <label for="description">Descripci√≥n</label>
    <input type="text" id="description" name="description" value="<%= appointment.description %>" />
  </div>

  
  
  <div class="actions">
      <% if (appointment.isNewRecord) { %>
        <input type="submit" name="create" value="Create" />
      <% } else { %>
        <input type="submit" name="update" value="Update" />
      <% } %>
  </div>
</form>